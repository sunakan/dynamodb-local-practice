################################################################################

################################################################################
# タスク
################################################################################
.PHONY: list-tables
list-tables: ## dynamodb tableの一覧
	aws dynamodb list-tables --endpoint-url $(ENDPOINT_URL)

.PHONY: create-table
create-table: ## dynamodb tableの作成
	aws dynamodb create-table --table-name BookCollection
